{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "baseUrl": "src"
  },
  "include": ["src/**/*", "tests/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist"],

  "ts-node": {
    "esm": true
  }
}
